<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" >
    
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imagePostingLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:background="@color/colorPrimary"/>

        <TextView
                android:id="@+id/textPostingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/imagePostingLogo"
                app:layout_constraintStart_toEndOf="@id/imagePostingLogo"
                tools:text="sample review"/>

        <TextView
                android:id="@+id/textPostingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/textPostingName"
                app:layout_constraintStart_toEndOf="@id/imagePostingLogo"
                tools:text="sample"/>

        <TextView
                android:id="@+id/textPostingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/textPostingTitle"
                app:layout_constraintStart_toEndOf="@id/imagePostingLogo"
                tools:text="sample"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/textPostingCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            tools:text="sample"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray"/>
</LinearLayout>