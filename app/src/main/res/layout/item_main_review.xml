<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imageReviewLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:background="@color/colorPrimary"/>

        <TextView
                android:id="@+id/textReviewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/imageReviewLogo"
                app:layout_constraintStart_toEndOf="@id/imageReviewLogo"
                tools:text="sample review"/>

        <TextView
                android:id="@+id/textReviewRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/textReviewName"
                app:layout_constraintStart_toEndOf="@id/imageReviewLogo"
                tools:text="sample"/>

        <TextView
                android:id="@+id/textReviewIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/textReviewName"
                app:layout_constraintStart_toEndOf="@id/textReviewRate"
                tools:text="sample"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
            android:id="@+id/textReviewSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp"
            tools:text="sample"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/textReviewProsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="장점"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/textReviewProsContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                tools:text="sample"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/textReviewConsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="단점"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/textReviewConsContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                tools:text="sample"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray"/>
</LinearLayout>